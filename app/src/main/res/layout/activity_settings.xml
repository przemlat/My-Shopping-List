<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.przemek.myshoppinglist.activity.SettingsActivity">

    <Button
        android:id="@+id/goMainActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="Powrót" />

    <Button
        android:id="@+id/applyChanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:text="Zatwierdź"
        android:layout_above="@+id/goMainActivity"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textFontSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rozmiar czcionki"
        android:textSize="18sp"
        android:layout_marginTop="110dp"
        android:layout_marginStart="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/fontSize"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/textFontSize"
        android:layout_marginStart="51dp"
        android:layout_toEndOf="@+id/textFontSize"
        android:ems="10"
        android:inputType="textPersonName" />

</RelativeLayout>